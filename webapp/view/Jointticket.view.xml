<mvc:View
    controllerName="com.bgl.app.jointticketform.controller.Jointticket"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <f:DynamicPage
        id="pageId"
        headerExpanded="{/headerExpanded}"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <svm:SmartVariantManagement
                        id="svm"
                        showExecuteOnSelection="true"
                    />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="expandedLabel"
                        text="No filters active"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="snappedLabel"
                        text="No filters active"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="pa_data_from"
                                label="From Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="fromDate"
                                        change="onDateChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="pa_data_to"
                                label="To Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="toDate"
                                        change="onDateChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="EquipmentNumber"
                                label="Equipment Number"
                                groupName="Group1"
                                visibleInFilterBar="false"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="EquipmentNumber"
                                        selectionChange=".onSelectionEquipmentNumber"
                                        items="{
												path: '/I_Equipment',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{Equipment}"
                                            text="{Equipment_Text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <!-- <fb:FilterGroupItem
                                name="FunctionalLocation"
                                label="Functional Location"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="FunctionalLocation"
                                        selectionChange=".onSelectionFunctionalLocation"
                                        items="{
												path: '/ZI_FunctionalLocationStdVH',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{FunctionalLocation}"
                                            text="{FunctionalLocationName}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem> -->
                            <fb:FilterGroupItem
                                name="FunctionalLocation"
                                label="Functional Location"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        id="idFunctionalLocationInput"
                                        showValueHelp="true"
                                        valueHelpRequest=".onOpenFunctionalLocationDialog"
                                        placeholder="Select Functional Location"
                                        showClearIcon="true"
                                        required="true"
                                        liveChange=".onFunctionalLocationClear"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="MeasuringPoint"
                                label="Measuring Point"
                                groupName="Group1"
                                visibleInFilterBar="false"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="MeasuringPoint"
                                        selectionChange=".onSelectionMeasuringPoint"
                                        items="{
												path: '/ZI_MeasuringPointDesc_VH',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{MeasuringPoint}"
                                            text="{MeasuringPointDescription}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="MeterSerialNo"
                                label="Meter Serial No."
                                groupName="Group1"
                                visibleInFilterBar="false"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="MeterSerialNo"
                                        selectionChange=".onSelectionMeterSerialNo"
                                        items="{
												path: '/ZI_MeterSerialNumber_VH',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{MeterSerialNumber}"
                                            text="{MeterSerialNumber}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="MeasuringCategory"
                                label="Measuring Point Category"
                                groupName="Group1"
                                visibleInFilterBar="false"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="MeasuringCategory"
                                        selectionChange=".onSelectionMeasuringCategory"
                                        items="{
												path: '/I_MeasuringPointCategory',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{MeasuringPointCategory}"
                                            text="{MeasuringPointCategory_Text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                items="{
						path: 'TableDataModel>/'
					}"
                fixedLayout="true"
                width="100%"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title
                                text="List of Measuring Points"
                                level="H2"
                            />
                            <ToolbarSpacer />
                            <Button
                                text="{
	                        path: 'UIDataModel>/Visible',
	                        formatter: 'myFormatter.buttonText'
                          }"
                                icon="{
	                        path: 'UIDataModel>/Visible',
	                        formatter: 'myFormatter.buttonIcon'
                          }"
                                press="onPressText"
                            />
                            <ToolbarSpacer />
                            <Button
                                text="Download Joint Ticket Form"
                                press="onPressPDFButton"
                            />
                            <Button
                                icon="sap-icon://excel-attachment"
                                press="onExport"
                                visible="false"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Functional Location" />
                    </Column>
                    <Column
                        width="8rem"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Functional Location Description" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Measuing Point" />
                    </Column>
                    <Column width="6rem">
                        <Text text="Meter Serial Number" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Meter Correction Factor" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Opening Date Reading" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Closing Date Reading" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Difference" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Actual Billable Quantity" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="false"
                    >
                        <Text text="Quantity" />
                    </Column>
                    <Column
                        width="6rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="false"
                    >
                        <Text text="Quantity Sold" />
                    </Column>
                    <!-- <Column
                        width="auto"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Measuring Point Category" />
                    </Column>
                    <Column
                        width="auto"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Measuring Point Category Description" />
                    </Column> -->

                    <!-- <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Equipment Description" />
                    </Column>
                    <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Customer Code (Desc of Measuring Point)" />
                    </Column> -->

                    <!-- <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Visible}"
                    >
                        <Text text="Characterestic Unit (UOM)" />
                    </Column> -->

                    <!-- <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Profit Center (Annual Estimates)" />
                    </Column>
                    <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Equipment Number" />
                    </Column> -->

                    <!-- <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Cost Center" />
                    </Column>
                    <Column
                        width="auto"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        visible="{UIDataModel>/Invisible}"
                    >
                        <Text text="Maintenance Planning Plant" /> 
                    </Column>-->
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{TableDataModel>FunctionalLocation}" />
                            <Text text="{TableDataModel>Location}" />
                            <Text text="{TableDataModel>MeasuringPoint}" />
                            <ObjectIdentifier
                                title="{TableDataModel>MeterNo}"
                            />
                            <Text text="{TableDataModel>meter_corr_factor}" />
                            <Text text="{TableDataModel>OpenDateRead}" />
                            <Text text="{TableDataModel>ClosedateRead}" />
                            <Text text="{TableDataModel>Difference}" />
                            <Text text="{TableDataModel>ActualBillQty}" />

                            <Text text="{TableDataModel>Quantity}" />
                            <Text text="{TableDataModel>QuantitySold}" />
                            <!-- <Text text="{TableDataModel>CostCenter}" />
                            <Text
                                text="{TableDataModel>MaintenancePlanningPlant}"
                            /> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
    <!--</Page>-->
    <Dialog
        id="idFunctionalLocationDialog"
        title="Select Functional Locations"
        draggable="true"
        resizable="true"
        afterClose=".onCloseDialog"
    >
        <content>
            <List
                id="idFunctionalLocationList"
                mode="MultiSelect"
                items="{
                path: '/ZI_FunctionalLocationStdVH'
            }"
            >
                <StandardListItem
                    title="{FunctionalLocationName}"
                    description="{FunctionalLocation}"
                />
            </List>
        </content>
        <buttons>
            <Button
                text="OK"
                press=".onSelectFunctionalLocation"
            />
            <Button
                text="Cancel"
                press=".onCloseDialog"
            />
        </buttons>
    </Dialog>
</mvc:View>
